{
  "manifest_version": 3,
  "name": "YouSkip Youtube Ad Shield",
  "version": "1.0",
  "description": "Shields you from YouTube ads automatically.",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "scripting"
  ],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}